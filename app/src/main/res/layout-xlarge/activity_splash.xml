<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAsh"
    tools:context="com.advent.sys.SplashScreenActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="539dp"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="112dp"
        android:text="Advent Sys"
        android:textSize="45sp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:gravity="center_horizontal" />

    <ImageView
        android:layout_width="429dp"
        android:layout_height="431dp"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/car_ash"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/txt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="133dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        app:layout_constraintVertical_bias="0.399"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/txt"
        app:layout_constraintHorizontal_bias="0.568" />

</android.support.constraint.ConstraintLayout>

